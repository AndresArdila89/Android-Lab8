<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivStudentPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
      />

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Andres Ardila"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintLeft_toRightOf="@+id/ivStudentPhoto"
            app:layout_constraintTop_toTopOf="@+id/ivStudentPhoto"
             />

        <TextView
            android:id="@+id/tvAgeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/tvStudentName"
            app:layout_constraintTop_toBottomOf="@+id/tvStudentName"
            />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="30"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvAgeLabel"
            app:layout_constraintLeft_toRightOf="@+id/tvAgeLabel" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/more"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ivStudentPhoto"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivTeacherPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/tvTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Andres Ardila"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@+id/ivTeacherPhoto"
        app:layout_constraintTop_toTopOf="@+id/ivTeacherPhoto"
        />

    <TextView
        android:id="@+id/tvSalaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary: "
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvTeacherName"
        app:layout_constraintTop_toBottomOf="@+id/tvTeacherName"
        />

    <TextView
        android:id="@+id/tvSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="90,000"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvSalaryLabel"
        app:layout_constraintLeft_toRightOf="@+id/tvSalaryLabel" />

    <TextView
        android:id="@+id/tvCommissionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commission: "
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvTeacherName"
        app:layout_constraintTop_toBottomOf="@+id/tvSalary"
        />

    <TextView
        android:id="@+id/tvCommission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="12%"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvCommissionLabel"
        app:layout_constraintLeft_toRightOf="@+id/tvCommissionLabel" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/more"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ivTeacherPhoto"
        />


</androidx.constraintlayout.widget.ConstraintLayout>